@{
  Layout = "_Layout";
}

<h1>Address Book</h1>

@if (@Model.Count == 0)
{
  <h3>No Contacts Have Been Added</h3>
}

<ol>
  @foreach (var contact in Model)
  {
    <li><a href="/contact/@contact.GetID()">@contact.GetName()</a></li>
  }
</ol>

<a href="/contact/add"><button>Add a new contact</button></a>
